{
  "name": "quacker",
  "productName": "Quacker",
  "version": "0.1.1",
  "description": "Cross-platform desktop application to run Javascript in response to global keyboard shortcuts",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:all": "electron-forge make --platform=darwin && electron-forge make --platform=linux && electron-forge make --platform=win32",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "robotjs:rebuild": "electron-rebuild -f -t prod,optional,dev -w robotjs ",
    "darwin:icns": "sh ./make_icns.sh",
    "win32:ico": "png-to-ico src/img/1F986_black_filled.png > src/img/1F986_black_filled.ico"
  },
  "keywords": [
    "javascript",
    "cross-platform",
    "keyboard-shortcuts"
  ],
  "author": "Harry Jubb",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/img/1F986_black_filled"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "harryjubb",
              "name": "quacker"
            },
            "prerelease": true,
            "draft": true
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-dmg": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/plugin-electronegativity": "^6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "6.0.0-beta.54",
    "@electron-forge/publisher-github": "^6.0.0-beta.54",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "css-loader": "^4.2.1",
    "electron": "12.0.1",
    "electron-rebuild": "^2.3.5",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "node-loader": "^1.0.1",
    "png-to-ico": "^2.1.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "ace-builds": "^1.4.12",
    "bootstrap": "^4.6.0",
    "electron-settings": "^4.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "live-plugin-manager": "^0.15.1",
    "react": "^17.0.1",
    "react-ace": "^9.3.0",
    "react-bootstrap": "^1.5.2",
    "react-dom": "^17.0.1",
    "robotjs": "git+https://github.com/octalmage/robotjs"
  }
}
